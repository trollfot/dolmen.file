<div class="file-field" i18n:domain="dolmen_file">
  <div>
    <input type="radio"
	   tal:attributes="name field/cooked_name"
	   value="0" checked="checked" />
    <label i18n:translate="keep_file"
	   tal:attributes="for field/cooked_name"
	   >Keep existing file</label>
  </div>
  <div>
    <input type="radio"
	   tal:attributes="name field/cooked_name"
	   value="2" />
    <label i18n:translate="delete_file"
	   tal:attributes="for field/cooked_name"
	   >Delete the existing file</label>
  </div>
  <div>
    <p>
      <input type="radio"
	     tal:attributes="name field/cooked_name"
	     value="1" />
      <label i18n:translate="upload_new_file"
	     tal:attributes="for field/cooked_name"
	     >Replace with new file:</label>
    </p>
  </div>
  <div tal:attributes="class string:_file_${field/name}">
    <input type="file" tal:attributes="name field/name" />
  </div>
</div>
